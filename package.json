{
  "name": "alias-forge",
  "version": "0.1.0",
  "description": "Shape your shortcuts once, use them everywhere.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "alias",
    "shell",
    "zsh",
    "bash",
    "powershell",
    "cli",
    "cross-platform"
  ],
  "author": "AliasForge Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrajendran/alias-forge.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "pug": "^3.0.2"
  },
  "build": {
    "appId": "com.aliasforge.app",
    "productName": "AliasForge",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "static/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icons/png/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
