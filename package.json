{
  "name": "alias-forge",
  "version": "1.0.0",
  "description": "Shape your shortcuts once, use them everywhere.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish:all": "electron-builder -mwl --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --win --publish always",
    "publish:linux": "electron-builder --linux --publish always",
    "draft:all": "electron-builder -mwl --publish never",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "alias",
    "shell",
    "zsh",
    "bash",
    "powershell",
    "cli",
    "cross-platform"
  ],
  "author": "AliasForge Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrajendran/alias-forge.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "pug": "^3.0.2"
  },
  "build": {
    "appId": "com.aliasforge.app",
    "productName": "AliasForge",
    "publish": [
      {
        "provider": "github",
        "owner": "rrajendran",
        "repo": "alias-forge",
        "releaseType": "release",
        "publishAutoUpdate": true
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "static/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "publisherName": "AliasForge Team"
    },
    "linux": {
      "icon": "assets/icons/png/512x512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "synopsis": "Shape your shortcuts once, use them everywhere",
      "description": "Cross-platform desktop application for managing shell and CLI aliases across macOS, Windows, and Linux."
    }
  }
}
